<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  STATUS BAR MENU -->
    <!--<style name="AppTheme.ActionBar.NoTitleBar.Fullscreen" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/optionsMenuBackgroundColor</item>
    </style>-->


    <style name="AppTheme.ActionBar.TopBarPanel" parent="AppTheme">
        <item name="colorPrimaryDark">@color/optionsMenuBackgroundColor</item>
        <item name="colorPrimary">@color/optionsMenuBackgroundColor</item>
    </style>


    <!-- ##############################  TEXT OVER MAIN SCREEN (OVER CAMERA PREVIEW) ################ -->
    <!-- First Text (white) -->
    <style name="whiteTextOverCamera" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondtextOverCameraColor</item>

        <item name="android:shadowColor">@color/shadowTextViewColor</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>
    <!-- Second Text (orange) -->
    <style name="orangeTextOverCamera" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textOverCameraColor</item>
        <item name="android:shadowColor">@color/shadowTextViewColor</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>
    <!-- Time Recording Text (red) -->
    <style name="timeRecordingTextOverCamera" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/redColor</item>
        <item name="android:layout_marginBottom">-4dp</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:shadowColor">@color/shadowTextViewColor</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>
    <!-- "REC" Text (red) -->
    <style name="REC_TextOverCamera" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/redColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:shadowColor">@color/shadowTextViewColor</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>
    <!-- "REC" CIRCLE (red) -->
    <style name="REC_circle" >
        <item name="android:layout_width">17dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/red_circle_shape</item>
        <item name="android:gravity">center|bottom</item>
    </style>





    <!-- BOTTOM PANEL CAMERA -->
        <!-- panel RelativeLayout button style-->
    <style name="bottomRLPanelButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">100</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">100</item>
        <item name="android:padding">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bottom_panel_button_color_clickable</item>
        <item name="android:gravity">top|center</item>
    </style>
        <!-- panel LinearLayout button style-->
    <style name="bottomLLPanelButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:weightSum">100</item>
        <item name="android:gravity">top|center</item>
        <item name="android:orientation">vertical</item>
    </style>
        <!-- panel ImageView button style-->
    <style name="bottomBPanelButtonImgViewStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">100</item>
        <item name="android:clickable">false</item>
    </style>
        <!-- panel TextView style-->
    <style name="menuTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
        <!-- panel TextView Resolution Information style-->
    <style name="menuResTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>






    <!-- Modes List Panel -->
        <!-- Linear Layout Square for IMAGE and TEXT -->
    <style name="verticalModesListPanel">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">15</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:weightSum">100</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bottom_panel_button_color_clickable</item>
        <item name="android:clickable">true</item>
    </style>
        <!-- Image Style -->
    <style name="modesListImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">70</item>
    </style>
        <!-- Text Under Image - Style -->
    <style name="textUnderIconListImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">30</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textColor">@color/secondtextOverCameraColor</item>
    </style>
</resources>
